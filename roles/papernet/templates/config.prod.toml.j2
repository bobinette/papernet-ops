# Prod configuration

[clients.auth]
user = "papernet_admin"
password = "{{ admin.password }}"
baseURL = "http://127.0.0.1:1705"

# ----------------------------------------
# Auth service
[auth]
key = "configuration/hs256.json"

[auth.cayley]
store = "data/auth.graph"
# Auth service
# ----------------------------------------

# ----------------------------------------
# Oauth service
[oauth]
bolt="data/oauth.db"

email = false
google = true
# Oauth service
# ----------------------------------------

# ----------------------------------------
# Google service
[google]
bolt = "data/google.db"
file = "configuration/oauth_google.json"
key = "configuration/hs256.json"
# Google service
# ----------------------------------------

# ----------------------------------------
# Imports service
[imports]
paperURL="http://127.0.0.1:1705/paper/v2/papers" # Mono server => it works
key = "configuration/hs256.json"

[imports.bolt]
store="data/imports.db"
# Imports service
# ----------------------------------------

# ----------------------------------------
# Paper server
[paper]
key = "configuration/hs256.json"

[paper.bolt]
store = "data/paper.db"

[paper.bleve]
store = "data/paper.index"
# Paper server
# ----------------------------------------

# ----------------------------------------
# legacy
[bolt]
store = "data/papernet.db"

[bleve]
store = "data/papernet.index"
